{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "exclude": ["node_modules", ".github", ".vscode", "src/**"]
  }
}

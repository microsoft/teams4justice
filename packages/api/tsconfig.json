{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "importHelpers": false,
    "resolveJsonModule": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true
  },
  "exclude": ["dist", "coverage", "node_modules"]
}
